        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Become a Member</title>
</head>

<body>
    <header class="container-fluid ">
        <div id="menu-jk" class="header-bottom">
            <div class="container">
                <div class="row nav-row">
                    <div class="col-lg-3 col-md-12 logo">
                        <a href="/home">
                            <img src="images/386.jpg" style="height: 60px;" alt="">
                        </a>
                    </div>
                    <div class="col-lg-9 col-md-12 nav-col">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="/home">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/stories">Blog</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/member/register">Become a Member</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/contact">Contact Us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/auth/logout">Logout</a>
                                    </li>
                                </ul>
                                <a class="nav-btn">
                                    <button class="btn btn-success" id="rzp-button1">Donate Now</button>
                                </a>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <h2 style="text-align: center;margin-top: 50px;">Welcome <%=name %>. Tell us why you want to join us? <i
                class="fas fa-rocket"></i></h2>
    <div class="container container-fluid">
        <div id="alert1" class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Data submitted successfully!!
        </div>
        <div id="alert2" class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Please fill in all the fields!!
        </div>
        <form method="POST" action="/form2">
            <div class="form-group">
                <label>Email Address</label>
                <input type="email" class="form-control" name="email" id="emailVal"
                    placeholder="Enter your email address" required>
            </div>
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" name="name" id="nameVal" placeholder="Enter your full name"
                    required>
            </div>
            <div class="form-group">
                <label>Why do you wish to join us?</label>
                <textarea class="form-control" name="reason" id="reasonVal" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary" onclick="showAlert()">Submit</button>
        </form>
    </div>
</body>
<script>
    axios.post('/order').then(info => {
        var options = {
            "key": `<%= keyId %>`,
            "name": "Save Thy Planet Corp",
            "description": "Transaction",
            "order_id": info.data.id,
            "callback_url": "/success",
            "notes": {
                "address": "Save-Thy-Planet Corporate Office"
            }
        }
        var rzp1 = new Razorpay(options);
        document.getElementById('rzp-button1').onclick = (e) => {
            rzp1.open();
            e.preventDefault();
        }
    })
</script>
